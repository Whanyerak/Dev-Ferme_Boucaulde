<div class="alert alert-info">
  <p>
    <strong>Bienvenue !</strong> Vous pouvez personnaliser les données de vos
    commandes via cette page.
  </p>
</div>

<%= form_with(model: current_user, url: '', local: true, class: 'form') do |f| %>
  <div class="col-md-6">
    <h3>Votre commande hebdomadaire</h3>

    <p>
      <em>Choisissez le ou les beurres que vous souhaitez ajouter à votre panier.</em>
    </p>

    <% butters.each do |butter| %>
      <div class="checkbox">
        <label>
          <%= check_box_tag butter.second %>
          <%= butter.first %>
        </label>
      </div>
    <% end %>
  </div>

  <div class="clearfix"></div>

  <div class="col-md-6">
    <h4>Fromages frais</h4>

    <table class="table">
      <% @cheeses.each do |cheese| %>
        <tr>
          <td><%= cheese.name %></td>
          <td><%= number_field_tag cheese.field_name, cheese.value, min: 0 %></td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="col-md-6">
    <h4>Yaourts disponibles</h4>

    <table class="table">
      <% @yaourts.each do |yaourt| %>
        <tr>
          <td><%= yaourt.name %></td>
          <td><%= number_field_tag yaourt.field_name, yaourt.value, min: 0 %></td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="pull-right">
    <%= f.submit "Enregistrer", class: 'btn btn-primary' %>
  </div>
<% end %>
