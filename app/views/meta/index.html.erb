<div class="alert alert-info">
  <p>
    <strong>Bienvenue !</strong> Vous pouvez personnaliser les données de vos
    commandes via cette page.
  </p>
</div>

<% if @shipment.errors.any? %>
  <div class="alert alert-danger">
    <p>Erreur(s) lors de la sauvegarde de votre commande :</p>

    <p>
      <ul>
        <% @shipment.errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </p>
  </div>
<% end %>

<%= form_with(url: '/', local: true, class: 'form') do |f| %>
  <div class="col-md-6">
    <h3>Votre commande hebdomadaire</h3>

    <p>
      <em>Choisissez le ou les beurres que vous souhaitez ajouter à votre panier.</em>
    </p>

    <% butters.each do |butter| %>
      <div class="checkbox">
        <label>
          <%= check_box_tag butter.second %>
          <%= butter.first %>
        </label>
      </div>
    <% end %>
  </div>

  <div class="clearfix"></div>

  <div class="col-md-6">
    <h4>Fromages frais</h4>

    <table class="table">
      <% @cheeses.each do |cheese| %>
        <%= cheese.field(@shipment) %>
      <% end %>
    </table>
  </div>

  <div class="col-md-6">
    <h4>Yaourts disponibles</h4>

    <table class="table">
      <% @yaourts.each do |yaourt| %>
        <%= yaourt.field(@shipment) %>
      <% end %>
    </table>
  </div>

  <div class="pull-right">
    <%= f.submit "Enregistrer", class: 'btn btn-primary' %>
  </div>
<% end %>
